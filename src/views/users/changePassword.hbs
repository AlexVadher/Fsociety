<div class="flex min-h-screen bg-gray-100">
<!-- Sidebar -->
  {{>asideProfile}}

<h1>aqui se cambia el password</h1>

<!-- Main Content -->
<main class="flex-1 p-8">
  <h1 class="text-2xl font-semibold mb-6">Cambiar Contraseña</h1>

  <!-- Contenedor principal -->
  <main class="flex-1 p-8">
  <h1 class="text-2xl font-semibold mb-6">Cambiar Contraseña</h1>

  <!-- Contenedor principal -->
  <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-lg p-8">
    <div class="flex items-start">
      
      <!-- Columna del formulario -->
      <div class="w-full">
        <h2 class="text-2xl font-semibold mb-6 text-center">Actualizar Contraseña</h2>
        
        <form action="/profile/changePassword/{{user.id}}" method="post" class="space-y-6">
          
          <!-- Fila 1: Contraseña actual -->
          <div>
            <label class="block text-gray-700 font-medium" for="contrasena-actual">Contraseña Actual</label>
            <input type="password" name="currentPassword" id="contrasena-actual" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-200" placeholder="**********" required>
          </div>
          
          <!-- Fila 2: Nueva contraseña -->
          <div>
            <label class="block text-gray-700 font-medium" for="nueva-contrasena">Nueva Contraseña</label>
            <input type="password" name="newPassword" id="nueva-contrasena" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-200" placeholder="**********" required>
          </div>
          
          <!-- Fila 3: Confirmar nueva contraseña -->
          <div>
            <label class="block text-gray-700 font-medium" for="confirmar-nueva-contrasena">Confirmar Nueva Contraseña</label>
            <input type="password" name="confirmNewPassword" id="confirmar-nueva-contrasena" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-200" placeholder="**********" required>
          </div>
          
          <!-- Botón para actualizar -->
          <div class="text-center mt-8">
            <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700">Actualizar Contraseña</button>
          </div>
          
        </form>
      </div>
    </div>
  </div>
</main>
</div>
