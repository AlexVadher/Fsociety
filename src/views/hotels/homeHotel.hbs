<div class="flex">
  <aside class="w-64 p-4 bg-gray-100 rounded-lg shadow-md">
    <h3 class="text-xl font-semibold text-gray-700 mb-4">Filtros</h3>
    <div class="mb-4">
      <label for="price" class="block text-gray-600 mb-2">Precio</label>
      <input type="range" id="price" name="price" min="0" max="500" class="w-full">
    </div>
    <div class="mb-4">
      <label for="rating" class="block text-gray-600 mb-2">Calificación</label>
      <select id="rating" name="rating" class="w-full p-2 border border-gray-300 rounded-md">
        <option value="">Seleccionar</option>
        <option value="1">1 estrella</option>
        <option value="2">2 estrellas</option>
        <option value="3">3 estrellas</option>
        <option value="4">4 estrellas</option>
        <option value="5">5 estrellas</option>
      </select>
    </div>
    <div class="mb-4">
      <label for="location" class="block text-gray-600 mb-2">Ubicación</label>
      <input type="text" id="location" name="location" class="w-full p-2 border border-gray-300 rounded-md"
        placeholder="Ciudad, País">
    </div>
    <button class="w-full py-2 bg-blue-700 text-white rounded-md">Aplicar Filtros</button>
  </aside>

  <main class="container mx-auto">
    {{!-- Sección de los mejores Hoteles --}}
    <div class="my-8 py-8">
      <h2 class="text-center text-blue-800 text-3xl font-bold">¡Los Mejores Hoteles!</h2>
      <section>
        <div class="flex flex-wrap justify-center mt-8">
          {{#each hotels}}
          <div class="relative m-2 p-2 rounded-lg shadow-lg shadow-gray-300 w-full sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/5">
            <div class="absolute top-4 right-4 p-1 bg-gray-300 hover:bg-red-400 rounded-full bg-opacity-65">
              <i class="fa-regular fa-heart fa-xl text-red-500 cursor-pointer"></i>
            </div>
            <a href="/details/hotel/{{id}}">
              <img class="h-40 w-full object-cover rounded-md" src="{{this.imagen}}" alt="imgActividades">
              <h2 class="mt-2 text-2xl font-bold text-gray-700 text-center">{{this.nombre}}</h2>

              <!-- Mostrar partes de la descripción -->
              <div class="mt-2 text-gray-500 text-center h-16 overflow-hidden">
                <p><strong>Ubicación:</strong> {{this.ubicacion}}</p>
              </div>
            </a>
          </div>
          {{/each}}
        </div>

      </section>
    </div>
    <div id="pagination-container"></div>
    <div id="dataContainer" class="flex flex-wrap justify-center mt-8"></div>

    {{!-- Sección de hoteles adicionales (si aplica) --}}
    <div class="my-8 py-8">
      <h2 class="text-center text-blue-800 text-3xl font-bold">¡Los Mejores Hoteles!</h2>
      <section>
        <div class="carro flex flex-wrap justify-center mt-8">
          {{#each hotels}}
          <div class="relative m-2 p-2 rounded-lg shadow-lg shadow-gray-300 w-full sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/5">
            <div class="absolute top-4 right-4 p-1 bg-gray-300 hover:bg-red-400 rounded-full bg-opacity-65">
              <i class="fa-regular fa-heart fa-xl text-red-500 cursor-pointer"></i>
            </div>
            <img class="h-40 w-full object-cover rounded-md" src="{{this.imagen}}" alt="imgActividades">
            <h2 class="mt-2 text-2xl font-bold text-gray-700 text-center">{{this.nombre}}</h2>
            <p class="mt-2 text-gray-500 text-center h-16 overflow-hidden">{{this.descripcion}}</p>
          </div>
          {{/each}}
        </div>
      </section>
    </div>
  </main>

</div>