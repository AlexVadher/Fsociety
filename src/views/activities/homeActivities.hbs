<section class="my-12">
  <h2 class="text-center text-blue-800 text-3xl font-bold mb-8">¡Vive nuevas experiencias!</h2>

  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
      {{#each activities}}
      <!-- Tarjeta de actividad -->
      <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <!-- Imagen principal de la actividad -->
        <img class="h-48 w-full object-cover" src="{{this.imagen}}" alt="Imagen de actividad">

        <!-- Detalles de la actividad -->
        <div class="p-6">
          <!-- Nombre de la actividad -->
          <h2 class="text-xl font-bold mb-2">{{this.nombre}}</h2>

          <!-- Descripción de la actividad -->
          <p class="text-gray-700 mb-4">{{this.descripcion}}</p>

          <!-- Costo de la actividad -->
          <p class="text-green-600 font-semibold mb-4">Costo: ${{this.costo}}</p>

          <!-- Disponibilidad de la actividad -->
          <p class="text-blue-600 font-medium mb-4">
            Disponibilidad: 
            {{#if (eq this.disponibilidad 1)}}Disponible{{else}}No disponible{{/if}}
          </p>

          <!-- Botones de acción -->
          <div class="flex justify-between items-center">
            <a href="#" class="text-blue-500 hover:text-blue-700 font-semibold">Más detalles</a>
            <button class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Reservar</button>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>

  <div class="container mx-auto px-4 mt-12">
    <h3 class="text-center text-blue-800 text-2xl font-bold mb-8">Galería de Imágenes</h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
      {{#each activities}}
        {{#each this.imgs}}
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
          <!-- Mostrar cada imagen de la galería -->
          <img class="h-48 w-full object-cover" src="/uploads/activities/{{../this.nombre}}-{{../this.id}}/{{this.image_name}}" alt="Imagen de actividad">
        </div>
        {{/each}}
      {{/each}}
    </div>
  </div>
</section>
