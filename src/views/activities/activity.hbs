<div class="container mx-auto table-container">
    <!-- Formulario -->
    <form action="/createactivity" method="post" class="max-w-lg mx-auto bg-white shadow-md rounded-lg p-6 mb-8">
        <div class="mb-4">
            <label for="nombre" class="block text-gray-700 text-sm font-bold mb-2">Nombre de la actividad:</label>
            <input type="text" id="nombre" name="nombre" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Escribe el nombre">
        </div>
        <div class="mb-4">
            <label for="costo" class="block text-gray-700 text-sm font-bold mb-2">Costo:</label>
            <input type="number" step="0.01" id="costo" name="costo" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Escribe el costo">
        </div>
        <div class="mb-4">
            <label for="descripcion" class="block text-gray-700 text-sm font-bold mb-2">Descripción:</label>
            <textarea id="descripcion" name="descripcion" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Escribe la descripción"></textarea>
        </div>
        <div class="mb-4">
            <span class="block text-gray-700 text-sm font-bold mb-2">Disponibilidad:</span>
            <div class="flex items-center">
                <input type="radio" id="disponible" name="disponibilidad" value="true" required class="mr-2 leading-tight">
                <label for="disponible" class="mr-4 text-gray-700">Disponible</label>
                <input type="radio" id="no-disponible" name="disponibilidad" value="false" required class="mr-2 leading-tight">
                <label for="no-disponible" class="text-gray-700">No disponible</label>
            </div>
        </div>
        <div class="flex justify-center">
            <button type="submit" class="bg-blue-700 hover:bg-blue-800 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Registrar Actividad
            </button>
        </div>
    </form>

</div>
