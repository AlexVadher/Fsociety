<!-- Archivo: views/partials/profileMenu.hbs -->
<div x-data="{ open: false }" class="relative ml-4 -mb-2">
  <!-- Botón de Perfil con Imagen y Nombre -->
  <button @click="open = !open" class="flex items-center focus:outline-none space-x-2">
    <!-- Imagen de Perfil en un Círculo -->
    <img src="/img/img.png" alt="" class="w-10 h-10 rounded-full border-2 border-gray-800">
    <!-- Nombre del Usuario -->
    <span class="text-white font-medium">{{users.nombre}}</span>
  </button>

  <!-- Menú Desplegable -->
  <div x-show="open" @click.away="open = false" class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg z-20">
    <a href="/profile/profileEdit/{{users.guid}}" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-200 rounded-md">
      <i class="fa-solid fa-user fa-xs mr-2"></i>
      Perfil
    </a>
    <a href="/favoritos" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-200 rounded-md">
      <i class="fa-solid fa-heart fa-xs mr-2" style="color: #dd1515;"></i>
      Mis Favoritos
    </a>
    <a href="/reservas" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-200 rounded-md">
      <i class="fa-solid fa-calendar-alt fa-xs mr-2" style="color: #da9a23;"></i>
      Mis Reservas
    </a>
    <a href="/settings" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-200 rounded-md">
      <i class="fa-solid fa-cog fa-xs mr-2"></i>
      Configuración
    </a>
    <a href="/logout" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-200 rounded-md">
      <i class="fa-solid fa-sign-out-alt fa-xs mr-2"></i>
      Cerrar Sesión
    </a>
  </div>
</div>
