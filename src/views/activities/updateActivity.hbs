    <form action="/activities/update/{{activity.id}}" method="post">
        <div>
            <label for="nombre">Nombre de la actividad:</label>
            <input value="{{activity.nombre}}" id="nombre" name="nombre" required>
        </div>
        <div>
            <label for="costo">Costo:</label>
            <input value="{{activity.costo}}" type="number" step="0.01" id="costo" name="costo" required>
        </div>
        <div>
            <label for="descripcion">Descripci√≥n:</label>
            <textarea value="{{activity.descripcion}}" id="descripcion" name="descripcion" required></textarea>
        </div>
         <div class="flex items center"></div>
            <label class="w-32 text-gray-700 font-medium" for="idRol">Disponibilidad</label>
            <select name="disponibilidad" id="idRol" class="form-select mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-200" required>
            <option value="true">Disponible</option>
            <option value="false">No disponible</option>
            </select>
        </div>
        <button type="submit">Actualizar Actividad</button>
    </form>