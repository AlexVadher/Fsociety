    </div>



        

        <!-- Columna del formulario -->
        <div class="w-3/4 ml-8">
          <h2 class="text-2xl font-semibold mb-6 text-center">Información general</h2>
          
          <form action="/profile/update/{{user.id}}" method="post" class="space-y-6">
            <!-- Fila 1: Nombre y Apellido -->
            <div class="grid grid-cols-2 gap-6">
              <div>
                <label class="block text-gray-700 font-medium" for="nombre">Nombre</label>
                <input type="text" name="nombre" id="nombre" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-200" value="{{user.nombre}}" placeholder="Ejemplo: Luis">
              </div>
              <div>
                <label class="block text-gray-700 font-medium" for="apellido">Apellido</label>
                <input type="text" name="apellido" id="apellido" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-200" value="{{user.apellido}}" placeholder="Ejemplo: Fernandez">
              </div>
            </div>

            <!-- Fila 2: Sexualidad y Género -->
            <div class="grid grid-cols-2 gap-6">
              <div>
                <label class="block text-gray-700 font-medium" for="sexualidad">Sexualidad</label>
                <input type="text" name="sexualidad" id="sexualidad" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-200" value="{{user.orientacionSexual}}" placeholder="Ejemplo: Heterosexual">
              </div>
              <div>
                <label class="block text-gray-700 font-medium" for="genero">Género</label>
                <input type="text" name="genero" id="genero" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-200" value="{{user.genero}}" placeholder="Ejemplo: Masculino">
              </div>
            </div>

            <!-- Información de la cuenta -->
            <h2 class="text-2xl font-semibold mb-6 text-center mt-8">Información cuenta</h2>
            
            <!-- Fila 3: Correo y Contraseña -->
            <div class="grid grid-cols-2 gap-6">
              <div>
                <label class="block text-gray-700 font-medium" for="correo">Correo</label>
                <input type="email" name="correo" id="correo" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-200" value="{{user.correo}}" placeholder="Ejemplo: luis@example.com">
              </div>
              <div>
                <label class="block text-gray-700 font-medium" for="contrasena">Contraseña</label>
                <input type="password" name="contrasena" id="contrasena" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-200" value="**********" placeholder="**********">
              </div>
            </div>

            <!-- Botón de Actualizar -->
            <div class="text-center mt-8">
              <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700">Actualizar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>
</div>
