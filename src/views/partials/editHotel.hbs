<!-- Modal para editar hotel -->
<div x-data='{ modalEdit: false, hotel: {} }'>
    <!-- Botón para abrir el modal -->
    <button
        type='button'
        @click='modalEdit = true'
        class='font-medium text-blue-500 hover:text-blue-700'
    >
        <i class='fas fa-edit'></i>
        Editar
    </button>

    <!-- Fondo del Modal -->
    <div
        x-show='modalEdit'
        x-transition.opacity.duration.200ms
        x-trap.inert.noscroll='modalEdit'
        @click.self='modalEdit = false'
        class='fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-30 backdrop-blur-sm'
    >
        <!-- Contenedor del Modal -->
        <div class='bg-white rounded-lg shadow-lg w-full max-w-md p-6 relative'>
            <!-- Botón de Cerrar -->
            <button
                @click='modalEdit = false'
                class='absolute top-2 right-2 text-gray-500 hover:text-gray-700'
            >
                <i class='fa-solid fa-xmark fa-2xl'></i>
            </button>
            <!-- Contenido del Modal -->
            <h2 class='text-2xl font-semibold mb-4 text-center'>Actualizar Hotel</h2>
            <form
                :action='`/updateHotel/${hotel.id}`'
                method='post'
                class='space-y-4'
            >
                <!-- Nombre -->
                <div class='flex flex-col'>
                    <label
                        class='text-gray-700 font-medium mb-1'
                        for='nombre'
                    >Nombre Hotel</label>
                    <input
                        type='text'
                        class='form-input block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-200'
                        id='nombre'
                        name='nombre'
                        x-model='hotel.nombre'
                        required
                    />
                </div>
                <!-- Teléfono -->
                <div class='flex flex-col'>
                    <label
                        class='text-gray-700 font-medium mb-1'
                        for='telefono'
                    >Teléfono</label>
                    <input
                        type='number'
                        step='0.01'
                        class='form-input block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-200'
                        id='telefono'
                        name='telefono'
                        x-model='hotel.telefono'
                        required
                    />
                </div>
                <!-- Ubicación -->
                <div class='flex flex-col'>
                    <label
                        class='text-gray-700 font-medium mb-1'
                        for='ubicacion'
                    >Ubicación</label>
                    <textarea
                        id='ubicacion'
                        name='ubicacion'
                        rows='4'
                        class='form-textarea block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-200'
                        x-model='hotel.ubicacion'
                        required
                    ></textarea>
                </div>
                <!-- Estrellas -->
                <div class='flex flex-col'>
                    <label
                        class='text-gray-700 font-medium mb-1'
                        for='estrellas'
                    >Estrellas</label>
                    <input
                        type='number'
                        class='form-input block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-200'
                        id='estrellas'
                        name='estrellas'
                        x-model='hotel.estrellas'
                        required
                    />
                </div>
                <!-- Descripción -->
                <div class='flex flex-col'>
                    <label
                        class='text-gray-700 font-medium mb-1'
                        for='descripcion'
                    >Descripción</label>
                    <input
                        type='text'
                        class='form-input block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-200'
                        id='descripcion'
                        name='descripcion'
                        x-model='hotel.descripcion'
                        required
                    />
                </div>
                <!-- Disponibilidad -->
                <div class='flex items-center'>
                    <label
                        class='w-32 text-gray-700 font-medium'
                    >Disponibilidad</label>
                    <div class='flex items-center'>
                        <input
                            type='radio'
                            id='disponible'
                            name='disponibilidad'
                            value='1'
                            x-model='hotel.disponibilidad'
                            :checked="hotel.disponibilidad == '1'"
                            required
                        />
                        <label for='disponible' class='ml-2'>Disponible</label>
                    </div>
                    <div class='flex items-center mt-2'>
                        <input
                            type='radio'
                            id='no-disponible'
                            name='disponibilidad'
                            value='0'
                            x-model='hotel.disponibilidad'
                            :checked="hotel.disponibilidad == '0'"
                            required
                        />
                        <label for='no-disponible' class='ml-2'>No disponible</label>
                    </div>
                </div>
                <!-- Botón de Envío -->
                <div class='mt-6'>
                    <button
                        type='submit'
                        class='w-full bg-green-600 text-white py-2 rounded-md hover:bg-green-700'
                    >Actualizar Hotel</button>
                </div>
            </form>
        </div>
    </div>
</div>