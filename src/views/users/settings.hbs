<div class="flex min-h-screen bg-gray-100">
    <!-- Sidebar -->
    {{>asideProfile}}

    <!-- Main Content -->
    <main class="flex-1 p-8">
        <h1 class="text-2xl font-semibold mb-6">Configuración del sistema</h1>

        <!-- Configuraciones -->
        <div class="container mx-auto bg-white shadow-lg rounded-lg p-6">
            <!-- Formulario de configuración -->
            <form action="/settings" method="POST" class="space-y-6">

                <!-- Selección de idioma -->
                <div class="space-y-2">
                    <label for="language" class="block text-sm font-medium text-gray-700">Idioma del sistema</label>
                    <select id="language" name="language"
                        class="mt-1 block w-full p-2 bg-gray-100 border border-gray-300 rounded-md">
                        <option value="es">Español</option>
                        <option value="en">Inglés</option>
                        <option value="fr">Francés</option>
                        <option value="de">Alemán</option>
                    </select>
                </div>

                <!-- Selección de zona horaria -->
                <div class="space-y-2">
                    <label for="timezone" class="block text-sm font-medium text-gray-700">Zona horaria</label>
                    <select id="timezone" name="timezone"
                        class="mt-1 block w-full p-2 bg-gray-100 border border-gray-300 rounded-md">
                        <option value="GMT-5">GMT-5:00</option>
                        <option value="GMT-6">GMT-6:00</option>
                        <option value="GMT+1">GMT+1:00</option>
                        <option value="GMT+2">GMT+2:00</option>
                    </select>
                </div>

                <!-- Configuración de notificaciones -->
                <div class="space-y-2">
                    <span class="block text-sm font-medium text-gray-700">Notificaciones</span>
                    <div class="flex items-center">
                        <input id="email_notifications" name="email_notifications" type="checkbox"
                            class="h-4 w-4 text-indigo-600 border-gray-300 rounded">
                        <label for="email_notifications" class="ml-2 block text-sm text-gray-900">Recibir notificaciones
                            por correo electrónico</label>
                    </div>
                    <div class="flex items-center">
                        <input id="sms_notifications" name="sms_notifications" type="checkbox"
                            class="h-4 w-4 text-indigo-600 border-gray-300 rounded">
                        <label for="sms_notifications" class="ml-2 block text-sm text-gray-900">Recibir notificaciones
                            por SMS</label>
                    </div>
                </div>

                <!-- Botón de guardado -->
                <div>
                    <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-md">Guardar cambios</button>
                </div>

            </form>
        </div>
    </main>
</div>