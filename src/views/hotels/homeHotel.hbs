<section class='my-12'>
    <h2 class='text-center text-blue-800 text-3xl font-bold mb-8'>¡Vive nuevas
        experiencias!</h2>

    <div class='container mx-auto px-4'>
        <div
            class='grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8'
        >
            {{#each hotels}}
                <!-- Tarjeta de actividad -->
                <div class='bg-white shadow-lg rounded-lg overflow-hidden'>
                    <!-- Imágenes de la actividad -->
                    <div
                        class='h-48 bg-cover bg-center'
                        style="background-image: url('{{this.imgs.0.image_name}}');"
                    ></div>

                    <!-- Detalles de la actividad -->
                    <div class='p-6'>
                        <!-- Nombre de la actividad -->
                        <h2 class='text-xl font-bold mb-2'>{{this.nombre}}</h2>

                        <p class='text-green-600 font-semibold mb-4'>Telefono: ${{this.telefono}}</p>

                        <p class='text-green-600 font-semibold mb-4'>Ubicaion: ${{this.ubicacion}}</p>

                        <p class='text-green-600 font-semibold mb-4'>Estrellas:
                            ${{this.estrellas}}</p>

                        <!-- Descripción del hotel -->
                        <p class='text-gray-700 mb-4'>{{this.descripcion}}</p>

                        <!-- Disponibilidad del hotel -->
                        <p class='text-blue-600 font-medium mb-4'>
                            Disponibilidad:
                            {{#if
                                (eq this.disponibilidad 1)
                            }}Disponible{{else}}No disponible{{/if}}
                        </p>

                        <!-- Botones de acción -->
                        <div class='flex justify-between items-center'>
                            <a
                                href='#'
                                class='text-blue-500 hover:text-blue-700 font-semibold'
                            >Más detalles</a>
                            <button
                                class='bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600'
                            >Reservar</button>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
    <div class='container mx-auto px-4 mt-12'>
        <h3 class='text-center text-blue-800 text-2xl font-bold mb-8'>Galería de
            Imágenes</h3>
        <div
            class='grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8'
        >
            {{#each hotels}}
                {{#each this.imgs}}
                    <div class='bg-white shadow-lg rounded-lg overflow-hidden'>
                        <img
                            class='h-48 w-full object-cover'
                            src='/public/uploads/activities/test-4/images-1726709818512-521920256-Captura de pantalla 2024-09-17 192420.png'
                            alt='Imagen de actividad'
                        />
                    </div>
                {{/each}}
            {{/each}}
        </div>
    </div>
</section>