<!-- Archivo: views/partials/profileMenu.hbs -->
<div x-data="{ open: false }" class="relative ml-4 -mb-2">
  <!-- Botón de Perfil con Imagen -->
  <button @click="open = !open" class="flex items-center focus:outline-none">
    <!-- Imagen de Perfil en un Círculo -->
    <img src="/img/img.png" alt="" class="w-10 h-10 rounded-full mr-2 border-1 border-gray-800">
    <i class="fa-solid fa-ellipsis-vertical fa-flip-both fa-xl" style="color: #ffffff;"></i>
  </button>

  <!-- Menú Desplegable -->
  <div x-show="open" @click.away="open = false" class="absolute right-0 mt-2 w-36 bg-white rounded-md shadow-lg z-20">
    <a href="/profile/edit" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-300 rounded-md">
      <i class="fa-solid fa-pencil-alt fa-xs mr-2"></i>
      Editar Perfil
    </a>
    <a href="/settings" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-300 rounded-md">
      <i class="fa-solid fa-cog fa-xs mr-2"></i>
      Configuración
    </a>
    <a href="/logout" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-300 rounded-md">
      <i class="fa-solid fa-sign-out-alt fa-xs mr-2"></i>
      Cerrar Sesión
    </a>
  </div>
</div>
