<div class="flex min-h-screen bg-gray-100">
    <!-- Sidebar -->
    {{>asideAdmin}}

    <!-- Main Content -->
    <main class="flex-1 p-8">
        <h1 class="text-2xl font-semibold mb-6">Lista de Actividades registradas</h1>
        <!-- Contenedor principal -->
        <div class="max-w-full mx-auto bg-white rounded-lg shadow-lg p-8">
            <!-- Componente parcial para registrar un hotel -->
            {{> addActivity}}
            <div class="flex items-start">
                <div class="container mx-auto my-8">
                    <!-- Tabla -->
                    <div class="bg-white shadow-md rounded-lg overflow-x-auto">
                        <table id="example" class="min-w-full divide-y divide-gray-200"
                            style="width:100%; padding-top: 1em;  padding-bottom: 1em;">
                            <thead class="bg-gray-800 text-white">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Nombre
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">Costo
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                                        Descripción</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                                        Disponibilidad</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider">
                                        Acciones</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                {{#each activities}}
                                <tr class="hover:bg-gray-300"> <!-- Clase de hover de Tailwind directamente aquí -->
                                    <td class="px-6 py-4 whitespace-nowrap">{{nombre}}</td>
                                    <td class="px-6 py-4 whitespace-nowrap">{{costo}}</td>
                                    <td class="px-6 py-4 whitespace-nowrap">{{descripcion}}</td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        {{#if disponibilidad}}
                                        <span class="text-green-500">Disponible</span>
                                        {{else}}
                                        <span class="text-red-500">No Disponible</span>
                                        {{/if}}
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center space-x-4">
                                            {{> editActivity}}
                                            {{> imgUploadActivities}}
                                            {{!-- Eliminar actividad --}}
                                            <a href="/admin/deleteActivity/{{id}}"
                                                class="text-red-600 hover:text-red-800">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>

                                        </div>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
<script src="/js/alertas.js"></script>