<!-- Archivo: views/partials/profileMenu.hbs -->
<div x-data="{ open: false }" class="relative">
  <!-- Botón de Perfil -->
  <button @click="open = !open" class="flex items-center focus:outline-none">
    <span class="mr-2">{{user.nombre}}</span>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
    </svg>
  </button>

  <!-- Menú Desplegable -->
  <div x-show="open" @click.away="open = false" class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg z-20">
    <a href="/profile/edit" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Editar Perfil {{user.nombre}}</a>
    <a href="/settings" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Configuración</a>
    <a href="/logout" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Cerrar Sesión</a>
  </div>
</div>
