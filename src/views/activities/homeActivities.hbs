<section class="my-12">
  <h2 class="text-center text-blue-800 text-3xl font-bold mb-8">¡Vive nuevas experiencias!</h2>
  <section>
    <div class="flex">
      <!-- Botón de anterior -->
      <div class="w-2/12 flex items-center justify-end">
        <button id="prevBtn" class="p-3 rounded-full bg-white border border-gray-100 shadow-lg mr-5">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
            stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 8.25 3 12m0 0 3.75 3.75M3 12h18" />
          </svg>
        </button>
      </div>

      <!-- Contenedor del carrusel (ocultando el scroll horizontal) -->
      <div id="sliderContainer1" class="w-10/12 overflow-hidden">
        <ul id="slider1" class="flex gap-5 overflow-x-scroll scroll-snap-x snap-mandatory scroll-smooth no-scrollbar">
          {{#each activities}}
          <li class="w-full md:w-1/2 lg:w-1/3 flex-shrink-0 snap-start">
            <div class="border rounded-lg p-5 h-full">
              <img class="h-40 w-full object-cover rounded-md" src="{{this.imagen}}" alt="Imagen de actividad">
              <h2 class="mt-2 text-2xl font-bold text-gray-700">{{this.nombre}}</h2>
              <p class="mt-2 text-gray-500">{{this.descripcion}}</p>
              <button class="mt-4 px-6 py-3 rounded-md bg-blue-700 text-white">Reservar</button>
            </div>
          </li>
          {{/each}}
        </ul>
      </div>

      <!-- Botón de siguiente -->
      <div class="w-2/12 flex items-center justify-start">
        <button id="nextBtn" class="p-3 rounded-full bg-white border border-gray-100 shadow-lg ml-5">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
            stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" />
          </svg>
        </button>
      </div>
    </div>
  </section>


  <!-- Paginación -->
  <div class="mt-8 flex justify-center">
    {{#if (gt totalPages 1)}}
    <nav class="inline-flex">
      {{#each (range 1 totalPages)}}
      <a href="?page={{this}}"
        class="mx-1 px-3 py-1 border rounded {{#if (eq ../currentPage this)}}bg-blue-500 text-white{{else}}bg-white text-blue-500{{/if}}">
        {{this}}
      </a>
      {{/each}}
    </nav>
    {{/if}}
  </div>
  </div>
</section>