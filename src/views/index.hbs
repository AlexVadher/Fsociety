<!-- Buscador Mejorado -->
<div class="bg-white shadow-lg rounded-full mx-4 mt-6 p-2 max-w-4xl mx-auto">
    <form action="/search" method="GET"
        class="flex flex-col sm:flex-row sm:items-center sm:space-x-4 space-y-3 sm:space-y-0">
        <!-- Dónde -->
        <div class="flex-grow flex flex-col text-center">
            <label for="where" class="font-medium text-sm text-gray-800 mb-1">Dónde</label>
            <input type="text" id="where" name="where" placeholder="Destino"
                class="border border-gray-300 rounded-full p-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 w-full">
        </div>
        <!-- Llegada -->
        <div class="flex-grow flex flex-col text-center">
            <label for="checkin" class="font-medium text-sm text-gray-600 mb-1">Llegada</label>
            <input type="date" id="checkin" name="checkin"
                class="border border-gray-300 rounded-full p-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 w-full">
        </div>
        <!-- Salida -->
        <div class="flex-grow flex flex-col text-center">
            <label for="checkout" class="font-medium text-sm text-gray-600 mb-1">Salida</label>
            <input type="date" id="checkout" name="checkout"
                class="border border-gray-300 rounded-full p-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 w-full">
        </div>
        <!-- Quién -->
        <div class="flex-grow flex flex-col text-center">
            <label for="guests" class="font-medium text-sm text-gray-600 mb-1">Quién</label>
            <input type="number" id="guests" name="guests" placeholder="Personas"
                class="border border-gray-300 rounded-full p-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 w-full">
        </div>

        <!-- Botón de Búsqueda -->
        <div class="flex-grow flex flex-col text-center">
            <button
                class="bg-blue-500 text-white font-semibold px-6 py-3 mt-6 rounded-full shadow-md hover:bg-blue-700 transition-all duration-300 self-center"><i
                    class="fa-solid fa-magnifying-glass"></i>
                Buscar
            </button>
        </div>
    </form>
</div>
