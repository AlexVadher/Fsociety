                <img :src="previewUrl" alt="Foto de perfil" class="rounded-lg w-32 h-32 object-cover mx-auto mb-4">
            </div>
            <input type="file" class="block w-full text-sm text-slate-500
              file:mr-4 file:py-2 file:px-4
              file:rounded-lg file:border-0
              file:text-sm file:font-semibold
              file:bg-violet-50 file:text-gray-700
              hover:file:bg-sky-100" name="avatar" id="avatar" accept="image/*"  required @change="handleFileChange($event)">
          <!-- Mostrar nombre del archivo seleccionado -->
          
          
          <!-- Botón para guardar cambios -->
          <div class="text-center">
            <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600">Guardar</button>
          </div>
